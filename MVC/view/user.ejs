<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usuário</title>
</head>
<body>
    <%- include('menu') %>
    <% if (user) { %>
        <h1>Bem-vindo, <%= user.nome %>!</h1>

        <h2>Adicionar Post</h2>
        <form action="/post" method="POST">
            <textarea name="content" placeholder="Escreva seu post aqui..." required></textarea>
            <button type="submit">Adicionar Post</button>
        </form>

        <h2>Seus Posts</h2>
        <ul>
            <% posts.forEach(post => { %>
                <li><%= post.content %></li>
            <% }) %>
        </ul>
    <% } else { %>
        <h1>Por favor, faça login para ver seu perfil.</h1>
    <% } %>
</body>
</html>